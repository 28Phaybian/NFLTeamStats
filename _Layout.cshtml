<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NFLTeamStats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NFLTeamStats.styles.css" asp-append-version="true" />

    <!-- Add Favicon -->
    <link rel="icon" href="~/images/NFL.ico" type="image/x-icon" />

    <style>
        /* Custom CSS to center the navbar brand */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar .navbar-brand {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                font-size: 1.5rem; /* Optional: size adjustment */
                color: white; /* Optional: color adjustment */
            }

        .navbar-nav {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar with blue background -->
        <nav class="navbar navbar-expand-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- App Name Centered (not a link or button) -->
                <span class="navbar-brand"> <b>Welcome To The 2020 NFL Database Find Game by Game Stats For All 32 Teams! </b></span>

                <!-- Navbar Toggle Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <!-- NFL Logo Positioned to the Right -->
                    <div class="ml-auto">
                        <img src="~/images/nfl.png" alt="NFL Logo" class="nfl-logo" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
